#jinja2: lstrip_blocks: "True"
[Unit]
Description=Miniflux
{% for service in custom_miniflux_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ matrix_systemd_unit_home_path }}"
ExecStartPre=-/usr/bin/env sh -c '/usr/bin/env docker kill custom-miniflux 2>/dev/null'
ExecStartPre=-/usr/bin/env sh -c '/usr/bin/env docker rm custom-miniflux 2>/dev/null'

# Intentional delay, so that the postgres (we likely depend on) can manage to start.
ExecStartPre=/usr/bin/env sleep 5

ExecStart=/usr/bin/env docker run --rm --name custom-miniflux \
			--log-driver=none \
			--user={{ matrix_user_uid }}:{{ matrix_user_gid }} \
			--cap-drop=ALL \
			--network={{ matrix_docker_network }} \
            -e "DATABASE_URL={{ custom_miniflux_database_connection_string }}" \
            -e "RUN_MIGRATIONS=1" \
			{% for arg in custom_miniflux_container_extra_arguments %}
			{{ arg }} \
			{% endfor %}
			{{ custom_miniflux_docker_image }}

ExecStop=-/usr/bin/env sh -c '/usr/bin/env docker kill custom-miniflux 2>/dev/null'
ExecStop=-/usr/bin/env sh -c '/usr/bin/env docker rm custom-miniflux 2>/dev/null'
Restart=always
RestartSec=30
SyslogIdentifier=custom-miniflux

[Install]
WantedBy=multi-user.target
