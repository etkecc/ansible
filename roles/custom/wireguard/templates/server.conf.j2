# {{ ansible_managed }}

[Interface]
Address = {{ custom_wireguard_subnet }}.1/24
SaveConfig = true
ListenPort = {{ custom_wireguard_port }}
PrivateKey = {{ server_key_private.stdout }}
PostUp = iptables -A FORWARD -i %i -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ custom_wireguard_interface_net }} -j MASQUERADE
PostDown = iptables -D FORWARD -i %i -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ custom_wireguard_interface_net }} -j MASQUERADE

{% for client in custom_wireguard_clients %}

[Peer]
PublicKey = {{ client_keys_public.results[loop.index0].stdout }}
AllowedIPs = {{ custom_wireguard_subnet }}.{{ loop.index + 1 }}/32
{% endfor %}
