[Unit]
Description=Reloads coturn periodically so that new SSL certificates can kick in

[Timer]
Unit={{ coturn_identifier }}-reload.service
OnCalendar={{ coturn_reload_schedule }}
RandomizedDelaySec={{ coturn_reload_schedule_randomized_delay_sec }}

[Install]
WantedBy=timers.target
